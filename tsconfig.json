{
  "compilerOptions": {
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "outDir": "src",
    "rootDir" : "src",
    "lib": [
      "es2018",
      "dom",
      "es6",
      "es5"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}